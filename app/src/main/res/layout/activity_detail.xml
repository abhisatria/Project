<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="#f6d186">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/gambarKos"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:src="@android:color/black">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#646464"
            android:text="Kos Name : ">
        </TextView>
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/tvNameKos"
            android:layout_marginHorizontal="20dp"
            android:textSize="24sp"
            style="@style/text"
            android:textStyle="bold"
            android:text="Elyan Home"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#646464"
            android:text="Kos Facility : "></TextView>
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/tvFacilityKos"
            style="@style/text"
            android:layout_marginHorizontal="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Wifi,Bed"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#646464"
            android:text="Kos Price : "></TextView>
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/tvPriceKos"
            style="@style/text"
            android:layout_marginHorizontal="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="1000000"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#646464"
            android:text="Kos Description : "></TextView>
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/tvDescription"
            style="@style/text"
            android:layout_marginHorizontal="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="The Cheapest Kos"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#646464"
            android:text="Kos Latitude : "></TextView>
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/tvLatitude"

            android:layout_marginHorizontal="20dp"
            android:textSize="24sp"
            style="@style/text"
            android:textStyle="bold"
            android:text="-1231231"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#646464"
            android:text="Kos Longtitude : "></TextView>
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/tvLongitude"
            style="@style/text"
            android:layout_marginHorizontal="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="121312"></TextView>
        <TextView
            android:id="@+id/tvBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:text=""></TextView>
        <Button
            android:id="@+id/btBook"
            style="@style/button"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="BOOK"></Button>
    </LinearLayout>
</ScrollView>